<h1>
  My Links -
  <span class='add-link'>
    <%= link_to 'add link', new_link_path %>
  </span>
</h1>

<div class='row'>
  <div class='link-list col-md-8'>
    <ul class='list-unstyled'>
      <% @links.each do |link| %>
        <%= render link %>
      <% end %>
    </ul>
  </div>
  <div class='tags col-md-4'>
    <h2>Tags</h2>
  </div>
</div>

