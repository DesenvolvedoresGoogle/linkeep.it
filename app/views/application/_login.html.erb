<div id='login' class='navbar-right'>
  <% if !current_user %>
    <%= link_to 'Sign in with Google', user_omniauth_authorize_path(:google_oauth2)  %>
  <% else %>
    <%= image_tag current_user.avatar, class:'img-circle' %>
	  <h5><%= current_user.username %>
    <small><%= current_user.email %></small></h5>
	 <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class:'logout' %>
  <% end %>
</div>
