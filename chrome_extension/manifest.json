{
  "manifest_version": 2,
  "name": "linkeep.it",
  "version": "1.0",
  
  "description": "This extension allow you to track your links.",
  "icons": {
    "128": "images/logo128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/logo19-off.png",
      "38": "images/logo38-off.png"
    },
    "default_title": "linkeep.it",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "log.js",
      "data.js",
      "linkeep.js",
      "urls.js",
      "background.js"
    ]
  },

  "permissions": [
    "background",
    "cookies",
    "tabs",
    "http://localhost:3000/"
  ],

  "homepage_url": "http://linkeep.it"
}
